<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', value: @task.title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control', value: @task.details %>
  </div>

  <div class="form-group">
    <%= f.label :completed %>
    <%= f.text_field :completed, class: 'form-control', value: "true or false" %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

