<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
  <p>[X] This task is completed </p>
<% else %>
  <p>[ ] This task is not completed </p>
<% end  %>
<p><%= link_to "Edit this task", edit_task_path %></p>
<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

<%= link_to "Back to list", tasks_path %>

